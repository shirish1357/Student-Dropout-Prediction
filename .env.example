# AWS SES Configuration for Email Outreach
# Copy this file to .env and fill in your values

# AWS credentials (get from IAM console)
AWS_ACCESS_KEY_ID=your-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-secret-access-key-here

# AWS region where SES is configured
AWS_REGION=us-east-1

# Verified sender email in SES
SES_SENDER_EMAIL=support@youruniversity.edu

# Support contact information (shown in emails)
SUPPORT_EMAIL=advising@youruniversity.edu
SUPPORT_PHONE=(555) 123-4567
APPOINTMENT_LINK=https://youruniversity.edu/schedule
